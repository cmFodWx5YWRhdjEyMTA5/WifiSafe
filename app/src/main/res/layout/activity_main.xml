<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.yuzunzz.edu.wifisafe.MainActivity">

    <TextView
        android:id="@+id/tv_wifi_state"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="" />

    <Button
        android:id="@+id/btn_open_wifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_wifi_state"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="打开wifi" />

    <Button
        android:id="@+id/btn_close_wifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_open_wifi"
        android:layout_centerHorizontal="true"
        android:text="关闭wifi" />

    <Button
        android:id="@+id/btn_wifi_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_close_wifi"
        android:layout_centerHorizontal="true"
        android:text="查看AP列表" />

    <Button
        android:id="@+id/btn_check_state"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_wifi_list"
        android:text="检查wifi状态" />

    <Button
        android:id="@+id/btn_white_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_check_state"
        android:text="查看信任AP列表" />

    <Button
        android:id="@+id/btn_black_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_white_list"
        android:text="查看可疑AP列表" />
</RelativeLayout>
